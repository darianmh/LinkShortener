
@model LinkShortener.ViewModel.ListPaginationModel
<!-- pagination -->
<nav aria-label="pagination">
	<ul class="pagination pagination-pill justify-content-end justify-content-center justify-content-md-end">

		@{
			int next = Model.Page + 1;
			int pre = Model.Page - 1;
		}
		@if (!Model.HasPre)
		{
			<li class="page-item disabled btn-pill ">
				<a class="page-link" asp-route-page="@pre" tabindex="-1" aria-disabled="true">قبلی</a>
			</li>
		}
		else
		{
			<li class="page-item btn-pill ">
				<a class="page-link" asp-route-page="@pre" tabindex="-1">قبلی</a>
			</li>
		}
		@for (int i = 1; i <= Model.PagesCount; i++)
		{
			@if (i == Model.Page)
			{
				<li class="page-item active" aria-current="page">
					<a class="page-link" asp-route-page="@i">@i <span class="sr-only">(فعلی)</span></a>
				</li>
			}
			else
			{
				<li class="page-item" aria-current="page">
					<a class="page-link" asp-route-page="@i">@i</a>
				</li>
			}
		}

		@if (!Model.HasNext)
		{
			<li class="page-item disabled">
				<a class="page-link" asp-route-page="@next" aria-disabled="true">بعدی</a>
			</li>
		}
		else
		{
			<li class="page-item">
				<a class="page-link" asp-route-page="@next">بعدی</a>
			</li>
		}

	</ul>
</nav>
<!-- pagination -->